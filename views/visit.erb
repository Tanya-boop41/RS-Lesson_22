<h2>Записаться</h2>

<form action="/visit" method="POST" role="form">
  
  <div class="form-group">
    <label>Введите ваше имя</label>
    <input name="username" type="text" class="form-control" placeholder="Введите ваше имя">
  </div>

  <div class="form-group">
    <label>Ваш номер</label>
    <input name="phone" type="text" class="form-control" placeholder="Введите номер телефона">
  </div>

  <div class="form-group">
    <label>Когда вас ждать</label>
    <input name="date_time" type="text" class="form-control" placeholder="Введите дату и время">
  </div>

  <div class="form-group">
  	<label>Выберите парикмахера</label>
  	<select name="barber" class="form-select" aria-label="Default select example">
  	<option selected>Выберите парикмахера...</option>
  	<option value="Уолтер Вайт">Уолтер Вайт</option>
  	<option value="Джесси Пинкман">Джесси Пинкман</option>
  	<option value="Гус Фринг">Гус Фринг</option>
</select>
 
  <button type="submit" class="btn btn-primary">Записаться</button>
</form>